
@model WeddingPage.Models.RSVP1
﻿@{
    ViewBag.Title = "RSVP";
}


<div class="jumbotron">
    <h1>RSVP for our wedding!</h1>
    <p class="lead">Please let us know if you can make it by filling out the information below!</p>
</div>

@using (Html.BeginForm())
{<center>
        <p>Name: </p>
        @Html.TextBoxFor(c => c.Name)<br /><br />
        <p>Email: </p>
        @Html.TextBoxFor(c => c.Email)<br /><br />
        <p>Phone: </p>
        @Html.TextBoxFor(c => c.Phone)<br /><br />
        <p>Are you coming?</p>
        @Html.DropDownListFor(c => c.Attend, new[] {new SelectListItem()
{
    Text = "Yes",Value = bool.TrueString },new SelectListItem()
    {
        Text="No", Value = bool.FalseString
    }}, "Choose Please") <br /><br />
        <input type="submit" value="Submit RSVP" />
    </center>
}

